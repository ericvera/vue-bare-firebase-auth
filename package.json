{
  "name": "vue-bare-firebase-auth",
  "version": "4.1.0",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "!/**/__test__",
    "!*.test.*"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "vue-tsc --noEmit && vite build",
    "lint": "eslint .",
    "smoke": "yarn build && yarn lint",
    "-- PRE-COMMIT HOOKS --": "",
    "localAfterInstall": "husky || true",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "packageManager": "yarn@4.10.2",
  "peerDependencies": {
    "firebase": ">=12.2.0",
    "pinia": ">=3.0.0",
    "vue": ">=3.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^24.5.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "eslint": "^9.36.0",
    "eslint-plugin-vue": "^10.4.0",
    "firebase": "^12.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "pinia": "^3.0.3",
    "pinst": "^3.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.6",
    "vite-plugin-dts": "^4.5.4",
    "vue": "^3.5.21",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.0.7"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ericvera/vue-bare-firebase-auth"
  },
  "keywords": [
    "vue",
    "firebase",
    "auth",
    "authentication"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,mjs}": "eslint --cache",
    "*": "prettier --ignore-unknown --write"
  }
